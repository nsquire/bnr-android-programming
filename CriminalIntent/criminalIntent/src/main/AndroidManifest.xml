            android:name="com.nick.android.criminalIntent.CrimeListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nick.android.criminalIntent.CrimePagerActivity"
            android:label="@string/title_activity_crime_pager"></activity>
    </application>

</manifest>
